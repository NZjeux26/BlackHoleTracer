{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-I/opt/homebrew/opt/sdl2/include",               // <-- Add SDL2 headers
                "-I/opt/homebrew/Cellar/sdl2/2.32.4/include",       // <-- (optional second path)
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L/opt/homebrew/opt/sdl2/lib",                    // <-- Add SDL2 lib path
                "-lSDL2"                                           // <-- Link with SDL2
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}